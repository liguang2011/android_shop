<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.salehelper.salehelper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.salehelper.activity.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--注册activity-->
        <activity
            android:name="com.salehelper.activity.LoginActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.salehelper.activity.ProductActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity
            android:name="com.salehelper.activity.ChangeActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity android:name="com.salehelper.activity.ViperActivity" />
        <activity android:name="com.salehelper.activity.BuySuccessActivity" />
        <activity
            android:name="com.salehelper.activity.RegisterActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.salehelper.activity.ChongzhiActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" />

    </application>

</manifest>
